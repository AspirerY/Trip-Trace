page {
  height: 100%;
}

.userinfo_container {
  height: 100%;
  background: #e8e8e8;
}

.userinfo_header {
  height: 100px;
  border-bottom: 1px solid #d2d2d2;
  background: #fff;
  display: flex;
  align-items: center;
}
.userinfo_avatar {
  margin-left: 20px;
  width: 70px;
}
.userinfo_nickname {
  font-size:16px;
  margin-left:20px;
}

.button_bar_wrapper {
  margin-top: 10px;
}

.button_bar {
  height: 54px;
  border-bottom: 1px solid #d2d2d2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 0 30px;
  background: #fff;
}
.button_bar text:first-child {
  font-size: 16px;
}
.button_bar text:last-child {
  font-size: 22px;
  color: #999999;
}